<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Password Reset</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <h1>Password Reset</h1>
    <nav class="nav">
        <div>
            Hi <%= user.name %>
        </div>
        <div>
            <a href="/home">Home</a>
            <a href="/profile">Profile</a>
            <a href="/signout">Sign-Out</a>
        </div>
    </nav>
    <div class="container">
            <% if (message.length) { %>
            <div class="flash"><%= message %> </div> <% } %>
            
            <form action="/passwordreset" method="POST">
                <label for="name">Name</label>
                <div>
                    <input required type="text" name="name" class="form-input" value="<%= user.name %>">
                </div>
                <label for="birthdate">Birthdate</label>
                <div>
                    <input required type="date" name="birthdate" class="form-input"  value="<%= format.date(new Date(user.birthdate), 'yyyy-mm-dd').date %>">
                </div>
                <label for="email">Email</label>
                <div>
                    <input required type="email" name="email" class="form-input"  value="<%= user.email %>">
                </div>
                <label for="password">Password</label>
                <div>
                    <input required type="password" name="password" class="form-input">
                </div>
                <label for="new_password">New Password</label>
                <div>
                    <input required type="password" name="new_password" class="form-input">
                </div>
                <label for="new_password_confirmation">Password Confirmation</label>
                <div>
                    <input required type="password" name="new_password_confirmation" class="form-input">
                </div>
    
                <button type="submit" class="form-btn">Update</button>
            </form>
        
        </div>
    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="/main.js"></script>
</body>
</html>